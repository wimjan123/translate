datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

model Session {
  id           String              @id @default(uuid())
  createdAt    DateTime            @default(now())
  duration     Int?                // Duration in seconds
  segmentCount Int                 @default(0)
  segments     TranscriptSegment[]

  @@index([createdAt])
}

model TranscriptSegment {
  id             String    @id @default(uuid())
  sessionId      String
  session        Session   @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  startTime      DateTime  @default(now()) // Actual timestamp when segment started
  endTime        DateTime  @default(now()) // Actual timestamp when segment ended
  originalText   String    // Source language text
  translatedText String    // Instant translation
  polishedText   String?   // LLM-polished translation (optional, applied later)
  isFinal        Boolean   @default(true)
}
